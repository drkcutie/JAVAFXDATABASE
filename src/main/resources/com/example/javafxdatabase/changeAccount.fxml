<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="560.0" prefWidth="585.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxdatabase.ChangeAccountController">
    <children>
        <HBox alignment="TOP_RIGHT" prefHeight="19.0" prefWidth="525.0" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Change Account">
            <font>
                <Font name="System Bold Italic" size="29.0" />
            </font>
        </Text>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <TextField fx:id="changeFirstName" maxHeight="40.0" minHeight="40.0" promptText="First Name" HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <TextField fx:id="changeLastName" maxHeight="40.0" minHeight="40.0" promptText="Last Name" HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <TextField fx:id="changeUsername" maxHeight="40.0" minHeight="40.0" promptText="Username" HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <PasswordField fx:id="changePassword" maxHeight="40.0" minHeight="40.0" prefWidth="374.0" promptText="Password" HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </HBox>
        <Button fx:id="accountChange" mnemonicParsing="false" onAction="#accountChange" prefHeight="79.0" prefWidth="124.0" text="Change">
            <font>
                <Font name="System Bold Italic" size="22.0" />
            </font></Button>
    </children>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox>
