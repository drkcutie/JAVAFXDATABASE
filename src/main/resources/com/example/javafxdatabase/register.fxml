<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="560.0" prefWidth="585.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxdatabase.RegisterController">
   <children>
      <HBox alignment="TOP_RIGHT" prefHeight="19.0" prefWidth="525.0" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Register Account">
         <font>
            <Font name="System Bold Italic" size="29.0" />
         </font>
      </Text>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="registerFirstName" maxHeight="40.0" minHeight="40.0" promptText="First Name" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="registerLastName" maxHeight="40.0" minHeight="40.0" promptText="Last Name" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="registerUsername" maxHeight="40.0" minHeight="40.0" promptText="Username" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <PasswordField fx:id="registerPassword" maxHeight="40.0" minHeight="40.0" prefWidth="374.0" promptText="Password" HBox.hgrow="ALWAYS" />
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </HBox>
      <Button fx:id="accountRegister" mnemonicParsing="false" onAction="#accountRegister" prefHeight="79.0" prefWidth="124.0" text="Register">
         <font>
            <Font name="System Bold Italic" size="22.0" />
         </font></Button>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Already have an account?" />
            <Hyperlink onAction="#backtoLogin" text="Sign in" textFill="#252424">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Hyperlink>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
