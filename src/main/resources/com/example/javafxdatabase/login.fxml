<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="512.0" prefWidth="450.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxdatabase.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Todolist Login">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Text>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Hey, enter your details to  sign in to your account" />
      <TextField fx:id="fieldUsername" maxHeight="40.0" minHeight="40.0" promptText="Enter Username">
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="20.0" />
         </VBox.margin></TextField>
      <TextField fx:id="fieldPassword" maxHeight="40.0" minHeight="40.0" promptText="Enter Password">
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </TextField>
      <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#loginAccount" prefHeight="47.0" prefWidth="117.0" text="Sign in">
         <font>
            <Font name="System Bold Italic" size="23.0" />
         </font>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></Button>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="2.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Don't have an account?" />
            <Hyperlink onAction="#registerAccount" text="Register now">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Hyperlink>
         </children>
      </HBox>
   </children>
</VBox>
